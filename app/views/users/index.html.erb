<h1>userslist</h1>
<table>


<thead>
    <th>Name</th>
    <th>Address</th>
    <th>Action</th
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name%></td>
      <td><%= user.address%></td>
       <td><%= link_to 'Show', user_path(user.id)%></td>
       <td><%= link_to 'Edit', edit_user_path(user.id)%></td>
       <td><%= link_to 'Delete', user_path(user.id), method: :delete%></td>
    </tr>
    <%end%>
  </tbody>

</table>
 <%= link_to 'new users',new_user_path %>
